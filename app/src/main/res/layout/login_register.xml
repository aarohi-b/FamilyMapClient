<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activities.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:horizontalSpacing="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:rowCount="8"
        android:useDefaultMargins="false"
        android:verticalSpacing="0dp">

        <TextView
            android:id="@+id/serverHostTextView"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/serverHostText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/serverHostEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/serverPortTextView"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/serverPortText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/serverPortEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/userNameText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/userNameEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/passwordTextView"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/passwordText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:padding="5dp"

            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/firstNameTextView"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/firstNameText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/lastNameTextView"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/lastNameText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/emailText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/genderTextView"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/genderText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_margin="0dp"
            android:orientation='horizontal'
            android:padding="0dp">

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:checked="true"
                android:padding="0dp"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:text="@string/maleText"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:text="@string/femaleText"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RadioGroup>

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/signInbutton"
            android:layout_width="89dp"
            android:layout_height="40dp"
            android:layout_marginTop="56dp"
            android:text="@string/signInText"
            />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="89dp"
            android:layout_height="40dp"
            android:layout_marginTop="56dp"
            android:text="@string/registerText" />

    </LinearLayout>

</LinearLayout>